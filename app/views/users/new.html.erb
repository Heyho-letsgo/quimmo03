<%# = render 'users/nav'%>
<%# = render 'users/form' %>
<div class="container">


  <div class="container">
    <header id="content-header">
      <h1>Sign Up</h1>
    </header>


  <%= form_for(@user) do |f| %>
    <%= render "shared/errors", object: @user %>

  <div class="col-md-12" style="border: 1px solid black">
    <div class="row">

      <div class="col-md-6"><%= f.label :name %></div>
      <div class="col-md-6" ><%= f.text_field :name, size: 40, autofocus: true %></div>
    </div>

    <div class="row">
      <div class="col-md-6"><%= f.label :email %></div>
      <div class="col-md-6" ><%= f.text_field :email, size: 40 %></div>
    </div>

    <div class="row">
      <div class="col-md-6"><%= f.label :password %></div>
      <div class="col-md-6" ><%= f.text_field :password, size: 40 %></div>
    </div>

    <div class="row">
      <div class="col-md-6"><%= f.label :password_confirmation %></div>
      <div class="col-md-6" ><%= f.text_field :password_confirmation, size: 40 %></div>
    </div>

    <div class="row">
      <div class="col-md-6"></div>
      <div class="col-md-6 pull-right" ><%= f.submit %></div>
    </div>

  </div>

</div>
<% end %>
</div>