<div class="container">
<h1>Sign In</h1>
<h2>No account yet? <%= link_to 'Sign up!', signup_path %></h2>

  <%= form_tag(session_path) do %>

          <%= label_tag :email, "Email ou username"  %>
          <%= text_field_tag :email || :username, nil, autofocus: true, size: 40, required: true %>
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, size: 40, required: true %>

  <%= submit_tag 'Sign In' %>
<% end %>
  </div>