<div class="container">
<h1>Quimmo Pro</h1>
<h2>Connexion </h2>
    <div class="container">
  <%= form_tag(session_path) do %>
<div class="container">

  <div class="row">
       <div class="col-md-2"> <%= label_tag :email, "Email"  %></div>
       <div class="col-md-10"><%= email_field_tag :email || :username, nil, autofocus: true, size: 40, required: true %> </div>
   </div>

   <div class="row">
        <div class="col-md-2"><%= label_tag :password %></div>
        <div class="col-md-10"><%= password_field_tag :password, nil, size: 40, required: true %></div>
   </div>
      <% end %>
  <div class="row">
    <div class="col-md-6">
    <div class="col-md-1 col-md-offset-9">  <%= submit_tag 'Se connecter' %>   </div>
    </div>
  </div>


</div>

</div>
</div>